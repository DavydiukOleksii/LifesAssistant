<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <Style x:Key="side-icon" TargetType="{x:Type Control}">
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
    </Style>

    <Style x:Key="bottom-icon" TargetType="{x:Type Control}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="40" />
    </Style>

    <Style x:Key="side-tile" TargetType="{x:Type controls:Tile}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="40" />
    </Style>

    <Style x:Key="bottom-tile" TargetType="{x:Type controls:Tile}">
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="50" />
    </Style>

</ResourceDictionary>